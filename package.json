{
  "name": "PepperoniAppTemplate",
  "author": "Futurice",
  "description": "React Native App Starter Kit for Android and iOS",
  "license": "MIT",
  "homepage": "http://getpepperoni.com",
  "bugs": "https://github.com/futurice/pepperoni-app-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/futurice/pepperoni-app-kit"
  },
  "keywords": [
    "React Native",
    "Starter Kit",
    "Bitrise",
    "Redux",
    "Auth0"
  ],
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "bundle:ios": "node ./node_modules/react-native/local-cli/cli.js bundle --platform ios --entry-file index.js --bundle-output ios/PepperoniAppTemplate/main.jsbundle --dev=false --verbose",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src test",
    "coverage": "rimraf coverage && jest --coverage",
    "version": "support/version-ios.sh"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ]
  },
  "dependencies": {
    "bluebird": "^3.3.5",
    "event-emitter": "^0.3.4",
    "immutable": "^3.7.6",
    "lodash": "^4.11.0",
    "moment": "^2.12.0",
    "prop-types": "^15.6.0",
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-native-vector-icons": "^4.4.2",
    "react-navigation": "^2.5.3",
    "react-redux": "^5.0.6",
    "react-navigation-redux-helpers": "^2.0.2",
    "redux": "^3.4.0",
    "redux-logger": "^2.6.1",
    "redux-loop-symbol-ponyfill": "^2.2.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.0.1",
    "standard-http-error": "^2.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-jest": "23.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react-native": "4.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.0.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-react": "^7.10.0",
    "fetch-mock": "^6.4.4",
    "istanbul": "^0.4.5",
    "jest": "^23.2.0",
    "plop": "^2.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.4.1",
    "react-native-mock": "~0.3.1",
    "react-test-renderer": "~16.4.1",
    "remote-redux-devtools": "^0.5.12",
    "rimraf": "^2.6.2"
  }
}
